{% extends "base.twig" %}

{% block content %}
	{% for post in posts %}
		{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
	{% endfor %}

	{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
	<i>{{copyright}}</i>
	{% set colors = ['red', 'blue', 'green', 'yellow', 'aliceblue', 'bisque', '#fe3344', 'darkblue', 'coral', 'orange', 'tomato']%}
	{% for color in colors %}
			<h2 style="background-color: {{color}}">{{ color }}
	{% endfor %}	
{% endblock %}
